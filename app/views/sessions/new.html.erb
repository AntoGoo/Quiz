<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Connexion</title>
    <!-- Inclusion de Bootstrap 5 via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
        background-color: #f8f9fa;
      }
    </style>
  </head>
  <body>
    <div class="container my-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <!-- Carte de connexion -->
          <div class="card shadow">
            <div class="card-header bg-primary text-white text-center">
              <h1 class="mb-0">Connexion</h1>
            </div>
            <div class="card-body">
              <%= form_with url: login_path, local: true do |form| %>
                <div class="mb-3">
                  <%= form.label :pseudo, "Votre pseudo", class: "form-label" %>
                  <%= form.text_field :pseudo, required: true, class: "form-control" %>
                </div>
                <div class="d-grid">
                  <%= form.submit "Se connecter", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Inclusion du JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
